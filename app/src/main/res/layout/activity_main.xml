<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nextdev.googlemapsexperiment.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"
        android:orientation="vertical">

        <TextView
            android:id="@+id/destinationsOutput"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/typeDestination"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:ems="10"
            android:hint="Pick Destination (Enter Number from 1-4)"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray" />

        <Button
            android:id="@+id/selectDestinationButton"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="@android:color/background_dark"
            android:text="Choose Destination"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/desiredLocation"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/currentLocation"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_light"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="52dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
